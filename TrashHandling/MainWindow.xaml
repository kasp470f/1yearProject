<Window x:Class="TrashHandling.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrashHandling"
        mc:Ignorable="d"
        Title="Home" Height="600" Width="1200">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--Navigation Bar-->
        <DockPanel Background="Gray" Height="20" VerticalAlignment="Top" Grid.Row="0">
            <Menu x:Name="Topbar">
                <MenuItem Header="Home"/>
                <MenuItem Header="Affald">
                    <MenuItem Header="Display Data"/>
                    <MenuItem Header="Registrér affald"/>
                    <MenuItem Header="Import fra .csv"/>
                    <MenuItem Header="Export til .csv"/>
                </MenuItem>
                <MenuItem Header="Statistik"/>
                <MenuItem Header="Console"/>
            </Menu>
        </DockPanel>
        
        <!--Viewing Window-->
        <Frame x:Name="viewingWindow" NavigationUIVisibility="Hidden" Panel.ZIndex="1" Grid.Row="1"/>
    </Grid>
</Window>
