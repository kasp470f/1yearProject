<Page x:Class="TrashHandling.Pages.ConsolePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrashHandling.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Console">

    <Grid Background="#f8f8f8">
        <TextBlock Text="Log (Console)" HorizontalAlignment="Center" Margin="10" FontSize="20"/>
        <TextBox x:Name="consoleBox" IsReadOnly="True" Margin="5,45,5,5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
    </Grid>
</Page>
