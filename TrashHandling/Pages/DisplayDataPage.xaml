<Page x:Class="TrashHandling.Pages.DisplayDataPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrashHandling.Pages"
      mc:Ignorable="d"
      Style="{StaticResource PageStyle}"
      d:DesignHeight="450" d:DesignWidth="1000">

    <Grid>
        <StackPanel Style="{StaticResource HorizontalCenteredVerticalStack}">
            <TextBlock Text="Display Data"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <DataGrid Style="{StaticResource StandardDataGrid}" HeadersVisibility="Column" CanUserAddRows="False" CanUserReorderColumns="False" CanUserSortColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Width="*" Header="Id" />
                        <DataGridTextColumn Width="*" Header="Mængde" />
                        <DataGridTextColumn Width="*" Header="Måleenhed" />
                        <DataGridTextColumn Width="*" Header="Affaldskategori" />
                        <DataGridTextColumn Width="*" Header="Affaldsbeskrivelse" />
                        <DataGridTextColumn Width="*" Header="Ansvarlig" />
                        <DataGridTextColumn Width="*" Header="VirksomhedsId" />
                        <DataGridTextColumn Width="*" Header="Dato" />
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
