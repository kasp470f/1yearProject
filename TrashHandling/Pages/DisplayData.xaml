<Page x:Class="TrashHandling.Pages.DisplayData"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrashHandling.Pages"
      mc:Ignorable="d"
      Style="{StaticResource PageStyle}"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DisplayData">

    <Grid>
        <StackPanel>
            <TextBlock Text="Display Data" Style="{StaticResource HeaderTextBlock}" Margin="10"/>
            <DataGrid Margin="20,10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" MinHeight="320">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID"/>
                    <DataGridTextColumn Header="Mængde"/>
                    <DataGridTextColumn Header="Måleenhed"/>
                    <DataGridTextColumn Header="Affaldskategori"/>
                    <DataGridTextColumn Header="Affaldsbeskrivelse"/>
                    <DataGridTextColumn Header="Ansvarlig"/>
                    <DataGridTextColumn Header="Virksomhed"/>
                    <DataGridTextColumn Header="Dato"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>
