<Application x:Class="TrashHandling.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TrashHandling"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
		
		<Style x:Key="PageStyle" TargetType="Page">
			<Setter Property="Background" Value="#F5F5F5"/>
		</Style>
		
		<Style x:Key="HeaderTextBlock" TargetType="TextBlock">
			<Setter Property="Grid.ColumnSpan" Value="3"/>
			<Setter Property="FontSize" Value="28"/>
			<Setter Property="TextAlignment" Value="Center"/>
		</Style>
		
		<Style x:Key="StandardTextBox" TargetType="TextBox">
			<Setter Property="Background" Value="#FAFAFA"/>
			<Setter Property="Margin" Value="0,5"/>
		</Style>
		
		<Style x:Key="DatePickBox" TargetType="DatePicker">
			<Setter Property="Background" Value="#FAFAFA"/>
			<Setter Property="Margin" Value="0,5"/>
		</Style>
		<Style x:Key="StandardComboBox" TargetType="ComboBox">
			<Setter Property="Background" Value="#FAFAFA"/>
			<Setter Property="Margin" Value="0,5"/>
		</Style>
		
    </Application.Resources>
</Application>
